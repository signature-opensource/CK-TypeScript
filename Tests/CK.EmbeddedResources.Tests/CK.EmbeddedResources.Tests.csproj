<Project Sdk="Microsoft.NET.Sdk">

    <!--
    Project references don't propagate build (transitive or not) NuGet embedded resources.
    We need to reference them explicitly.        
    -->
    <Import Project="../../CK.EmbeddedResources/MSBuild/CK.EmbeddedResources.props" />
    <Import Project="../../CK.EmbeddedResources/MSBuild/CK.EmbeddedResources.targets" />

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CK.Testing.Nunit" Version="11.0.0-a00-00-0013-develop" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.11.1" />
        <PackageReference Include="NUnit3TestAdapter" Version="4.6.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\CK.EmbeddedResources\CK.EmbeddedResources.csproj" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="**\*.sql" />
    </ItemGroup>

</Project>
